<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:startDestination="@id/main_fragment"
        android:id="@+id/nav_main">

    <fragment
            android:id="@+id/main_fragment"
            android:name="com.morshues.connbroandroid.ui.main.FriendListFragment"
            tools:layout="@layout/fragment_friend_list">

        <action
                android:id="@+id/action_main_fragment_to_friend_create_fragment"
                app:destination="@id/friend_create_fragment" />

        <action
                android:id="@+id/action_main_fragment_to_friend_detail_fragment"
                app:destination="@id/friend_detail_fragment" />

        <action
                android:id="@+id/action_main_fragment_to_event_list_fragment"
                app:destination="@id/event_list_fragment" />

    </fragment>

    <fragment
            android:id="@+id/friend_create_fragment"
            android:name="com.morshues.connbroandroid.ui.main.FriendCreateFragment"
            tools:layout="@layout/fragment_friend_create">
    </fragment>

    <fragment
            android:id="@+id/friend_detail_fragment"
            android:name="com.morshues.connbroandroid.ui.main.FriendDetailFragment"
            tools:layout="@layout/fragment_friend_detail">
        <argument
                android:name="user_id"
                app:argType="long" />
        <argument
                android:name="friend_id"
                app:argType="long" />
        <action
                android:id="@+id/action_friend_detail_fragment_to_event_editing_dialog"
                app:destination="@id/event_editing_dialog" />
        <action
                android:id="@+id/action_friend_detail_fragment_to_info_editing_dialog"
                app:destination="@id/personal_info_editing_dialog" />
    </fragment>

    <fragment
            android:id="@+id/event_list_fragment"
            android:name="com.morshues.connbroandroid.ui.event.EventListFragment"
            tools:layout="@layout/fragment_event_list">
        <action
                android:id="@+id/action_event_list_fragment_to_event_detail_fragment"
                app:destination="@id/event_detail_fragment" />
    </fragment>

    <fragment
            android:id="@+id/event_detail_fragment"
            android:name="com.morshues.connbroandroid.ui.event.EventDetailFragment"
            tools:layout="@layout/fragment_event_detail">
        <argument
                android:name="event_id"
                app:argType="long" />
    </fragment>

    <dialog
            android:id="@+id/event_editing_dialog"
            android:name="com.morshues.connbroandroid.ui.event.EventEditingDialog"
            tools:layout="@layout/dialog_event_editing">
        <argument
                android:name="user_id"
                app:argType="long" />
        <argument
                android:name="person_id"
                app:argType="long" />
        <argument
                android:name="event_id"
                app:argType="long" />
    </dialog>

    <dialog
            android:id="@+id/personal_info_editing_dialog"
            android:name="com.morshues.connbroandroid.ui.main.PersonalInfoEditingDialog"
            tools:layout="@layout/dialog_personal_info_editing">
        <argument
                android:name="user_id"
                app:argType="long" />
        <argument
                android:name="person_id"
                app:argType="long" />
        <argument
                android:name="personal_info_id"
                app:argType="long" />
    </dialog>

</navigation>